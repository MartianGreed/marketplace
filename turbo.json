{
	"$schema": "https://turbo.build/schema.json",
	"tasks": {
		"build:scarb": {
			"dependsOn": ["^build:scarb"],
			"outputs": ["target/"]
		},
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**", "target/"]
		},
		"lint:check": {
			"dependsOn": ["^lint:check", "^build:scarb"]
		},
		"lint": {
			"dependsOn": ["^lint", "^build:scarb"]
		},
		"format:check": {},
		"format": {},
		"test": {},
		"test:watch": {
			"persistent": true,
			"cache": false
		},
		"dev": {
			"persistent": true,
			"cache": false
		}
	}
}
